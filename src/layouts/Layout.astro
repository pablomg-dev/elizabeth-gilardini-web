---
import "../styles/global.css";
import MobileMenu from "../components/MobileMenu";
import DesktopMenu from "../components/DesktopMenu";
import ScrollToTop from "../components/ScrollToTop";
import SmoothScroll from "../components/SmoothScroll";

interface Props {
    title: string;
    description?: string;
}

const {
    title,
    description = "Elizabeth Gilardini - Coaching y Desarrollo Personal",
} = Astro.props;

interface MenuItem {
    href?: string;
    text: string;
}

const menuItems: MenuItem[] = [
    { href: "/#sobre-mi", text: "Sobre Mí" },
    { href: "/#servicios", text: "Servicios" },
    { href: "/#contacto", text: "Contacto" },
];
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/logo.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
            rel="stylesheet"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
        />
        <meta
            name="keywords"
            content="coaching, desarrollo personal, Elizabeth Gilardini, crecimiento personal, talleres, cursos"
        />
        <meta name="author" content="Elizabeth Gilardini" />
        <link rel="canonical" href="https://elizabethgilardini.com/" />
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:url" content={Astro.url.href} />
        <meta
            property="og:image"
            content="https://elizabethgilardini.com/logo.png"
        />
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta
            name="twitter:image"
            content="https://elizabethgilardini.com/logo.png"
        />
    </head>

    <body class="min-h-screen font-funnel">
        <header
            class="w-full relative bg-white backdrop-blur-sm shadow-sm z-50 border border-[#64638f]"
        >
            <nav class="container mx-auto px-4">
                <div class="flex justify-between items-center">
                    <a href="/" class="cursor-pointer py-2">
                        <img
                            src="/logo.png"
                            alt="Elizabeth Gilardini"
                            class="h-16 md:h-20 lg:h-24 w-auto object-contain object-center transition-all duration-300"
                        />
                    </a>
                    <DesktopMenu client:load items={menuItems} />
                    <MobileMenu client:load items={menuItems} />
                </div>
            </nav>
        </header>

        <main>
            <slot />
        </main>

        <ScrollToTop client:load />
        <SmoothScroll client:load />

        <footer class="bg-white text-black pt-8">
            <div class="container mx-auto px-4">
                <div
                    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8"
                >
                    <div>
                        <h3 class="text-xl font-semibold mb-4 text-[#64638f]">
                            Elizabeth Gilardini
                        </h3>
                        <p>Coaching y Desarrollo Personal</p>
                    </div>

                    <div class="min-w-0">
                        <h3 class="text-xl font-semibold mb-4 text-[#64638f]">
                            Contacto
                        </h3>
                        <ul class="space-y-2">
                            <li>Email: gilardinielizabeth@gmail.com</li>
                            <li>Instagram: @constelaciones.eg</li>
                        </ul>
                    </div>

                    <div>
                        <h3 class="text-xl font-semibold mb-4 text-[#64638f]">
                            Enlaces Rápidos
                        </h3>
                        <ul class="space-y-2">
                            <li>
                                <a
                                    href="/#sobre-mi"
                                    class="hover:text-[#9795cf]">Sobre Mí</a
                                >
                            </li>
                            <li>
                                <a
                                    href="/#servicios"
                                    class="hover:text-[#9795cf]">Servicios</a
                                >
                            </li>
                            <li>
                                <a
                                    href="/#contacto"
                                    class="hover:text-[#9795cf]">Contacto</a
                                >
                            </li>
                        </ul>
                    </div>

                    <div>
                        <h3 class="text-xl font-semibold mb-4 text-[#64638f]">
                            Legales
                        </h3>
                        <ul class="space-y-2">
                            <li>
                                <a href="/terminos" class="hover:text-[#9795cf]"
                                    >Términos y Condiciones</a
                                >
                            </li>
                            <li>
                                <a href="/cookies" class="hover:text-[#9795cf]"
                                    >Política de Cookies</a
                                >
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div
                class="border border-[#64638f] mt-8 py-2 text-center text-sm text-black"
            >
                Elizabeth Gilardini &copy; 2026 &mdash; Desarrollado por
                <a
                    href="https://www.pablomgdev.lat/"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-[#64638f] hover:underline ml-1"
                >
                    PabloMG
                </a>
            </div>
        </footer>
    </body>
</html>
